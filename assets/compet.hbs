
{% for comp in  competitions %}
<div class="col-md-4 col-xs-10 col-xs-offset-1" style="margin-bottom:10px;">
    <div class="" style="border:1px solid grey;">
        <div class="" style="width:100%;text-align:center;">
            <img src="{{script_root}}/plugins/competitions/assets/pics/{{comp.profile}}" style="width:100%;height:200px;" />
        </div>
        <div class="col-md-12" style="padding:10px 10px;height:180px;">
            <div class="compettime" style="font-size:12px;color:grey">{{comp.startTime}}</div>
            <div class="competname" style="font-size:22px;width:98%;text-align:center;margin-bottom:5px;margin-top:5px;">{{comp.title}}</div>
            <a href="{{script_root}}/competitions/{{comp.id}}"><button class="btn btn-success" style="width:96%;position:absolute;bottom:10px;left:2%">点此进入</button></a>
        </div>
    </div>
</div>
{% endfor %}